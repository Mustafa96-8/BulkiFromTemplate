@model List<Category>
@{

    ViewData["Title"] = "Categories";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Список категорий
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" type="button" class="btn btn-outline-primary btn">
               <i class="bi bi-plus-circle"></i> Создать новую категорию
            </a>
            
        </div>
    </div>

</div>

<table class="table table-bordered ">
    <thead class="tab-content table-primary">
    <tr>
        <th>
            Название категории
        </th>
        <th>
            Порядок вывода
        </th>
        <th>
            
        </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder)){
            <tr>
                <td class="tab-content bg-light">
                    <a asp-controller="Category" asp-action="GetOne" asp-route-id="@obj.Id">@obj.Name</a>
                </td>
                <td class="tab-content bg-light">@obj.DisplayOrder</td>
                <td class ="tab-content bg-light">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-primary mx-1 rounded-2">
                        <i class="bi bi-pencil-square"></i> Edit</a>

                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger mx-1 rounded-2">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>