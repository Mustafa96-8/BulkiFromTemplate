@model Product
@{
    ViewData["Title"] = "Product";
}
<form method="get">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@Html.DisplayName(Model.Title)</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <p>
                <label asp-for="Title" class="p-0"></label> : @Html.DisplayName(Model.Title)
            </p>
        </div>
        <div class="mb-3 row">
            <p>
                <label asp-for="Author" class="p-0"></label> : @Html.DisplayName(Model.Author.ToString())
            </p>
        </div>
        <div class="mb-3 row">
            <p>
                <label asp-for="Category.Name" class="p-0"></label> : @Html.DisplayName(Model.Category.Name.ToString())
            </p>
        </div>
        <div class="mb-6 row">
            <p>
                <label asp-for="Description" class="p-0"></label> : @Html.DisplayName(Model.Description.ToString())
            </p>
        </div>
        <div class="mb-3 row">
            <p>
                <label asp-for="Price" class="p-0"></label> : @Html.DisplayName(Model.Price.ToString())
            </p>
        </div>
        <div class="row">
            <div class="w-75 btn-group" role="group">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary mx-1 rounded-2">
                    <i class="bi bi-box-arrow-in-left"></i> Back to list
                </a>
                <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary mx-1 rounded-2">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>

                <a asp-controller="Product" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger mx-1 rounded-2">
                    <i class="bi bi-trash3"></i> Delete
                </a>
            </div>
        </div>

    </div>
</form>