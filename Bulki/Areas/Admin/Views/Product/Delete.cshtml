@model Product
@{
    ViewData["Title"] = "Delete Product";
}
<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <p>
                <label asp-for="Title" class="p-0"></label> : @Html.DisplayName(Model.Title)
            </p>
        </div>
        <div class="mb-3 row">
            <p>
                <label asp-for="Author" class="p-0"></label> : @Html.DisplayName(Model.Author.ToString())
            </p>
        </div>
        <div class="mb-3 row">
            <p>
                <label asp-for="Price" class="p-0"></label> : @Html.DisplayName(Model.Price.ToString())
            </p>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-outline-danger">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary" style="padding-block-end">
                    Back to list
                </a>
            </div>
        </div>

    </div>
</form>
