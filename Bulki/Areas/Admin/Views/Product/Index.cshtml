@model List<Product>
@{

    ViewData["Title"] = "Products";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Список Книг
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" type="button" class="btn btn-outline-primary btn">
                <i class="bi bi-plus-circle"></i> Добавить новую книгу
            </a>

        </div>
    </div>

</div>

<table class="table table-bordered ">
    <thead class="tab-content table-primary">
        <tr>
            <th>
                Название книги
            </th>
            <th>
                Автор
            </th>
            <th>
                Цена
            </th>
            <th>
                Категория
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.Title))
        {
            <tr>
                <td class="tab-content bg-light">
                    <a asp-controller="Product" asp-action="GetOne" asp-route-id="@obj.Id">@obj.Title</a>
                </td>
                <td class="tab-content bg-light">@obj.Author</td>
                <td class="tab-content bg-light">@obj.Price</td>
                <td class="tab-content bg-light">@obj.Category.Name</td>
                <td class="tab-content bg-light width=10%">
                    <div class="btn-group" role="group">
                        <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-outline-primary mx-1 rounded-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>

                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn top-right btn-outline-danger mx-1 rounded-2">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>